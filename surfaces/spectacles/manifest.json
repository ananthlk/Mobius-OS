{
    "manifest_version": 3,
    "name": "Möbius Spectacles",
    "version": "0.1.0",
    "description": "Context-aware interface for Mobius OS",
    "permissions": [
        "activeTab",
        "sidePanel",
        "storage",
        "tabs",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "action": {
        "default_title": "Open Möbius Side Panel"
    },
    "background": {
        "service_worker": "background.js"
    }
}